# .env_example
# Copy this file to .env and fill in your actual values
# Never commit .env with real secrets to version control!

# Django secret key - generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-super-secret-django-key-here

# Debug mode - False in production!
DEBUG=True

# Allowed hosts - comma separated (add your domain in production)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database configuration
# Set REMOTE_DB=True if using external MySQL (not docker)
REMOTE_DB=False

# MySQL settings (used when MYSQL=True)
MYSQL=True
MYSQL_HOST=localhost
MYSQL_PORT=3306                    # Default MySQL port (your custom: 33066)
MYSQL_DATABASE=your_db_name        # Database name
MYSQL_USER=your_db_user            # Database username
MYSQL_PASSWORD=your_db_password    # Database password

# Docker-specific (only needed when using docker-compose)
MYSQL_ROOT_PASSWORD=root_password_for_docker_mysql
